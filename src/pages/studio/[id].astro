---
import MobileLayout from '@/layouts/app.astro';
import SeatMap from '@/components/app/seats/SeatMap';

// Get the studio ID from the URL parameter
const studioId = Number(Astro.params.id);

// Validate that we have a valid ID
if (isNaN(studioId) || studioId <= 0) {
    return Astro.redirect('/');
}
---

<MobileLayout
    title="CineBook - Select Seats"
    header="Select Seats"
    withBottomNav={false}
    withBack
>
    <SeatMap client:load studioId={studioId} />
</MobileLayout>
